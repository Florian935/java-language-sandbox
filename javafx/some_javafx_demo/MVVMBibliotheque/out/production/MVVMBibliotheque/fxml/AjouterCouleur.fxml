<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import view.uc.BoutonAction?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <top>
        <VBox>
            <Label text="Choisir la couleur:"/>
            <ColorPicker fx:id="colorPicker"/>
        </VBox>
    </top>
    <bottom>
        <HBox styleClass="container-bouton">
            <BoutonAction onActionBtnAjouter="#clicAjouter" textBtnAjouter="Ajouter"/>
            <BoutonAction onActionBtnAjouter="#clicAnnuler" textBtnAjouter="Annuler"/>
        </HBox>
    </bottom>
</BorderPane>
