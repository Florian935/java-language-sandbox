<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.4" prefHeight="300" prefWidth="700" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.FenetrePrincipale">
    <items>
        <VBox>
            <HBox alignment="CENTER">
                <Label text="Marque: " />
                <Label fx:id="labelMarque" />
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
                <Label text="Changer la marque: ">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></Label>
                <TextField fx:id="textFieldMarque" />
            </HBox>
            <VBox>
                <HBox alignment="CENTER" spacing="8.0">
                    <Label text="Couleur: " />
                    <Label fx:id="labelCouleur" />
                    <VBox.margin>
                        <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER">
                    <Label text="Changer la couleur: ">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </Label>
                    <ColorPicker fx:id="colorPicker" />
                </HBox>
            <VBox.margin>
               <Insets top="6.0" />
            </VBox.margin>
            </VBox>

            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </VBox>
        <ScrollPane>
        </ScrollPane>
    </items>
</SplitPane>
